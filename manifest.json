{
    "name": "Mana",
    "description": "Locked quizzes for Firefox! Tested on Arch Linux.",
    "version": "0.0.1",
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "*://forms.google.com/*",
        "*://docs.google.com/*",
        "webRequest",
        "webRequestBlocking"
    ],
    "background": {
        "scripts": ["src/main.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "*://forms.google.com/*",
                "*://docs.google.com/forms/*",
                "*://docs.google.com/forms/*/startquiz",
                "*://docs.google.com/*/forms/*/startquiz"
            ],
            "js": ["src/backend.js"],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://forms.google.com/*",
                "*://docs.google.com/forms/*",
                "*://docs.google.com/forms/*/startquiz",
                "*://docs.google.com/*/forms/*/startquiz"
            ],
            "js": ["src/content-script.js"],
            "all_frames": true,
            "run_at": "document_start",
            "world": "MAIN"
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "manaquiz@themirrazz.vercel.app",
            "data_collection_permissions": {
                "required": ["none"]
            }
        }
    }
}
